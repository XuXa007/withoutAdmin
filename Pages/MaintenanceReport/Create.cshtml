    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>MaintenanceReport</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaintenanceReport.Vehicle.Make" class="control-label"></label>
                <select asp-for="MaintenanceReport.Vehicle.Make" class="form-control" asp-items="@(ViewBag.MakeList as SelectList)"></select>
